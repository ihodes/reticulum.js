{
    "name": "customer",
    "initialState": "Idle",
    "states": [
        { "name" : "Idle",
          "actions": {
              "event": [ [["if", "eq", "requestRide"],
                          ["reify", "Ride", ".currentRide",
                           "location::..location",
                           "customerId::.id",
                           "carType::..carType"],
                          "WaitingForResponse"]
                       ]
          }
        },
        { "name" : "WaitingForResponse",
          "actions": {
              "event": [ 
                  [["if", "eq", "rideAccepted"],
                   "WaitingForPickup"],
                  [["if", "eq", "cancel"],
                   ["send", "Ride", ".currentRide.id", "cancel"],
                   ["clear", ".currentRide"],
                   "Idle"]
              ]
            }
        },
        { "name" : "WaitingForPickup",
          "actions": {
              "event": [ [["if", "eq", "pickedUp"], "InCar"],
                         [["if", "eq", "driverCancelled"], "WaitingForResponse"],
                         [["if", "eq", "cancel"],
                          ["send", "Ride", ".currentRide.id", "cancel"],
                          ["clear", ".currentRide"],
                          "Idle"]
                       ]
          }
        },
        { "name" : "InCar",
          "actions": {
              "event": [ [["if", "eq", "droppedOff"], "Arrived"] ]
          }
        },
        { "name" : "Arrived", 
          "actions": {
              "event": [ [["if", "eq", "sentFeedback"],
                          ["request", "post", ["@UberWebhookUrl", "/feedback"],
                           "feedback::..feedback",
                           "rideId::.currentRide.id",
                           "customerId::.id"],
                          "Idle"] 
                       ],
              "exit": [ ["clear", ".currentRide"] ]
          }
        }
    ]
}
